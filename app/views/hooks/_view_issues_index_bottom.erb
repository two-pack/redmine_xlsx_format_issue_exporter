$('p.other-formats').first().append('' +
        '<span>' +
        '<a class="xlsx" rel="nofollow" ' +
        'onclick="showModal(&#x27;xlsx-export-options&#x27;, &#x27;350px&#x27;); return false;" ' +
        'href="xlsx_export">XLSX</a>' +
